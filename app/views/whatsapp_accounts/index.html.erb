<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h2>WhatsApp Accounts</h2>
          <%= link_to "Add New Account", new_whatsapp_account_path, class: "btn btn-primary float-end" %>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>WhatsApp Number</th>
                <th>App ID</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @whatsapp_accounts.each do |account| %>
                <tr>
                  <td><%= account.name %></td>
                  <td><%= account.whatsapp_mobile_number %></td>
                  <td><%= account.app_id %></td>
                  <td>
                    <%= link_to "Edit", edit_whatsapp_account_path(account), class: "btn btn-sm btn-primary" %>
                    <%= link_to "Delete", whatsapp_account_path(account), 
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @whatsapp_accounts %>
        </div>
      </div>
    </div>
  </div>
</div>
