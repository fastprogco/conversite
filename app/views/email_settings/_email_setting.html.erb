<div id="<%= dom_id email_setting %>">
  <p>
    <strong>Name:</strong>
    <%= email_setting.name %>
  </p>

  <p>
    <strong>Smtp host:</strong>
    <%= email_setting.smtp_host %>
  </p>

  <p>
    <strong>Port:</strong>
    <%= email_setting.port %>
  </p>

  <p>
    <strong>Email address:</strong>
    <%= email_setting.email_address %>
  </p>

  <p>
    <strong>User name:</strong>
    <%= email_setting.user_name %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= email_setting.password %>
  </p>

</div>
