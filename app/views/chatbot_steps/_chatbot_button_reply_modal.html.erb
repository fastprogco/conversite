
<!-- Reply Option Modal -->
<div class="modal fade" id="<%= reply_modal_id %>" tabindex="-1" aria-labelledby="replyOptionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="replyOptionModalLabel">Add Reply Option</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "chatbot_button_replies/form", chatbot_button_reply: ChatbotButtonReply.new %>
      </div>
    </div>
  </div>
</div>
