<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h2>Chatbots</h2>
          <%= link_to "New Chatbot", new_chatbot_path, class: "btn btn-primary float-end" %>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Master Segments</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @chatbots.each do |chatbot| %>
                <tr>
                  <td><%= chatbot.name %></td>
                  <td><%= chatbot.description %></td>
                  <td><%= chatbot.master_segments.pluck(:name).join(', ') %></td>
                  <td>
                    <%= link_to "Edit", edit_chatbot_path(chatbot), class: "btn btn-sm btn-warning" %>
                    <% first_step = ChatbotStep.find_by(chatbot_id: chatbot.id, previous_chatbot_step_id: nil) %>
                    <% if first_step.present? %>
                      <%= link_to "Edit Steps", edit_chatbot_chatbot_step_path(chatbot, first_step.id), class: "btn btn-sm btn-warning" %>
                    <% else %>
                      <%= link_to "Add Step", new_chatbot_chatbot_step_path(chatbot), class: "btn btn-sm btn-success" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @chatbots %>
        </div>
      </div>
    </div>
  </div>
</div>
