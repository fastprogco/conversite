<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h2><%= broadcast.new_record? ? "New Broadcast" : "Edit Broadcast" %></h2>
        </div>
        <div class="card-body">
          <%= form_with(model: broadcast, local: true) do |f| %>
            <%= render "shared_partials/error", model: broadcast %>

            <div class="mb-3">
              <%= f.label :name, "Broadcast Name", class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :whatsapp_account_id, "WhatsApp Account", class: "form-label" %>
              <%= f.collection_select :whatsapp_account_id, @whatsapp_accounts, :id, :name, 
                  { prompt: 'Select WhatsApp Account' }, 
                  { class: "form-select" } 
              %>
            </div>

            <div class="mb-3">
              <%= f.label :template_id, "Template", class: "form-label" %>
              <%= f.collection_select :template_id, @templates, :id, :name,
                  { prompt: 'Select Template' },
                  { class: "form-select" }
              %>
            </div>

            <div class="mb-3">
              <%= f.label :master_segment_id, "Segment", class: "form-label" %>
              <%= f.collection_select :master_segment_id, @master_segments, :id, :name,
                  { prompt: 'Select Segment' },
                  { class: "form-select" }
              %>
            </div>

            <div class="mb-3">
              <%= f.label :timing, class: "form-label" %>
              <%= f.select :timing,
                  options_for_select([
                    ['Send Now', 'send_now'],
                    ['Schedule', 'schedule']
                  ]),
                  { prompt: 'Select Timing' },
                  { class: "form-select" }
              %>
            </div>

            <div class="mb-3">
              <%= f.submit class: "btn btn-primary" %>
              <%= link_to "Cancel", broadcasts_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

