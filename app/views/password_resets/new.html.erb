<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h4><%= t("forgot_password") %></h4>
          <%= form_with(url: password_resets_path, local: true, data: { turbo: false },method: :post, class: "pt-3") do |form| %>
            <div class="form-group">
              <%= form.label t("email"), class: "form-label" %>
              <%= form.email_field :email, class: "form-control form-control-lg" %>
            </div>
            <div class="mt-3">
              <%= form.submit t("send_reset_instructions"), class: "btn btn-primary btn-lg font-weight-medium auth-form-btn" %>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to t("back_to_login"), login_user_path, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
